{
  "name": "@krono/sdk",
  "version": "0.0.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "private": true,
  "files": [
    "dist/**"
  ],
  "exports": {
    "./core": {
      "import": "./dist/core/index.mjs",
      "require": "./dist/core/index.js",
      "types": "./dist/core/index.d.ts"
    },
    "./react": {
      "import": "./dist/react/index.mjs",
      "require": "./dist/react/index.js",
      "types": "./dist/react/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/core/index.ts src/react/index.ts --format esm,cjs --dts --external react",
    "dev": "tsup src/index.ts src/core/index.ts src/react/index.ts --format esm,cjs --watch --dts --external react",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "devDependencies": {
    "@krono/tsconfig": "workspace:*",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "react": "19.2.3",
    "tsup": "8.5.1",
    "typescript": "5.9.3",
    "@biomejs/biome": "2.3.8"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.12",
    "usehooks-ts": "^3.1.1",
    "websocket-ts": "^2.2.1"
  }
}
